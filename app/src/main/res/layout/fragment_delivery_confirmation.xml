<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.crowdtogo.crowdie.crowdtogo.DeliveryConfirmationFragment">

    <!-- TODO: Update blank fragment layout -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:text="PLEASE INPUT UNIQUE DELIVERY CODE"
        android:gravity="center"
        android:layout_gravity="center" />


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="189dp"
        android:orientation="vertical"
        android:background="@drawable/bg_delivery_feed_item_delivery"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:padding="10dp"
        android:layout_marginBottom="10dp"
        android:layout_gravity="center_horizontal|bottom">

        <EditText
            android:id="@+id/uniqueEditText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textEmailAddress"
            android:ems="10"
            android:textAlignment="center"
            android:hint="Enter the code here"
            android:padding="10dp"
            android:textSize="15sp"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true" />


    <Button
        android:id="@+id/done"
        android:layout_width="169dp"
        android:layout_height="wrap_content"
        android:text="ENTER"
        android:textColor="@color/white"
        android:background="@drawable/bg_btn"
        android:focusable="false"
        android:layout_gravity="left|bottom"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />


    </RelativeLayout>
</FrameLayout>
